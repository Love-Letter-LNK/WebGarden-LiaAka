server {
    listen 80;
    server_name example.com; # Ganti dengan domain Anda (misal: liaazekk.com)
    
    # SECURITY: Hides Nginx version number
    server_tokens off;

    location / {
        proxy_pass http://localhost:3001; # Port aplikasi Node.js Anda
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        
        # Meneruskan IP asli client (penting untuk Rate Limiting)
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    # Opsional: Cache untuk file statis
    location /uploads/ {
        proxy_pass http://localhost:3001/uploads/;
        expires 30d;
        access_log off;
    }
}
